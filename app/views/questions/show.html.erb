<h2><%= @question.title %></h2>

<p><%= @question.content %></p>

<table>
  <tr>
    <th>回答</th>
    <th>ユーザー名</th>
  </tr>    
  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.content %></td>
      <td><%= answer.user.name %></td>
    </tr>
  <% end %>
</table>

<% if @question.closed %>
  <p><strong>この質問は終了しました。</strong></p>
<% elsif current_user == @question.user %>
  <%= link_to "終了する", close_question_path(@question), method: :patch, class: "btn btn-primary" %>
<% end %>

<h3>回答を投稿する</h3>
<%= form_with(model: [ @question, @question.answers.build ], local: true) do |form| %>
  <% if @question.errors.any? || @question.answers.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count + @question.answers.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        <% @question.answers.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "回答を投稿する", class: "btn btn-primary" %>
  </div>
<% end %>

<% if current_user == @question.user && !@question.closed %>
  <h3>再質問をする</h3>
  <%= render "questions/answer_form", question: @question %>

  <% if @question.reply.present? %>
    <h3>回答を再投稿する</h3>
    <%= render "questions/answer_form", question: @question, answer: @question.reply %>
  <% end %>
<% end %>　










