<h1>管理者用ユーザー一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>管理者</th>
      <th>編集</th>
      <th>削除</th>    
    </tr>
  </thead>
  <tbody>      
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? ? 'Yes' : 'No' %></td>
      <td><%= link_to '編集', edit_admin_user_path(user) %></td>
      <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
    </tr>
  <% end %>
</tbody>
</table>  

<%= link_to '新規ユーザー作成', new_admin_user_path %>